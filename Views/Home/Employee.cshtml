    <style>
        .status-approved {
            color: green;
        }

        .status-rejected {
            color: red;
        }

        .status-forwarded {
            color: blue;
        }

        .status-in-progress {
            color: orange;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .modal-header, .modal-footer {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .modal-footer {
            border-top: 1px solid #ddd;
            text-align: right;
        }

        .modal-body {
            padding: 10px;
        }

        .form-group {
            margin-bottom: 15px;
        }

