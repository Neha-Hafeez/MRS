<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewBag.Title - PEC MRS</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        /* Hero section styling */
        .hero-section {
            background-color: #178066;
            padding: 100px 0;
            color: white;
            text-align: center;
        }

        /* Header styling */
        .header_bottom {
            background-color: #178066;
        }

        .navbar-nav .nav-link,
        .quote_btn-container a,
        .navbar-toggler {
            color: white !important;
        }

        /* Logo and text styling */
        .navbar-brand {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            margin-left: 100px;
        }

            .navbar-brand img {
                width: 70px;
                margin-right: 15px;
            }

            .navbar-brand span {
                font-size: 24px;
                font-weight: bold;
                color: white;
                display: inline-block;
                vertical-align: middle;
                line-height: 70px; /* Adjust this value to match the logo's height */
            }

        /* Login button styling */
        .details-button {
            color: #178066;
            background-color: white;
            border: none;
        }

            .details-button:hover {
                background-color: #146953;
                color: white;
            }

        /* Modal styles */
        .modal-header {
            background-color: #178066;
            color: white;
        }

        .modal-footer .btn-secondary {
            background-color: #146953;
            border-color: #146953;
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header>
        <div class="header_bottom">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="~/">
                        <img src="~/Asset/Images/pecwhitelogo.png" alt="Logo">
                        <span>PEC Medical Reimbursement System</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex mr-auto flex-column flex-lg-row align-items-center" style="padding-left: 70px;">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="~/">Home <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/about">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/contact">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <button type="button" class="btn btn-info details-button" data-toggle="modal" data-target="#loginModal" style="margin-left: 110px; margin-top: 8px;">Login</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- End Header Section -->

    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.Action("Login", "Login")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
